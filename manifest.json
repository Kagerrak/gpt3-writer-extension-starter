{
  "name": "Prayer Generator",
  "description": "We will write a prayer with the details that you gave.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Generate a prayer"
  },
  "background": { "service_worker": "scripts/contextMenuServiceWorker.js" },
  "permissions": ["contextMenus", "tabs", "storage"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
